<Window x:Class="FaceItGUI.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FaceItGUI"
        mc:Ignorable="d"
        Title="LoginWindow" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181735"
        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="366*"/>
            <ColumnDefinition Width="323*"/>
            <ColumnDefinition Width="76*"/>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>

        
        <Grid Background="#0F0F2D"
            Grid.ColumnSpan="5" Grid.Row="0" MouseDown="Grid_MouseDown">

            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Content="Exit"
                Foreground="white"
                FontSize="20"
                FontWeight="Medium"
                Margin="0,0,10,0"
                Grid.Column="12"
                Grid.ColumnSpan="2" 
                Click="ExitClick"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Center"
                    
                    >

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                        <Setter Property="Background" Value="#FE6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C70"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="90" Height="25"
                                    CornerRadius="8"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1"
                VerticalAlignment="Center"
                Margin="60,0,60,0" Grid.ColumnSpan="2">

            <StackPanel>
                <StackPanel Orientation="Horizontal"
                    Margin="0,0,0,20">
                    <Image Width="100" Height="100"
                           RenderOptions.BitmapScalingMode="Fant" Source="/Images/facial-recognition-icon.jpg"></Image>
                    <TextBlock Text="FaceIt"
                       Foreground="White"
                       FontSize="80"
                       FontWeight="Medium"
                       VerticalAlignment="center"
                       FontFamily="Fonts/#Dosis"
                       Margin="10,0,0,0"></TextBlock>
                </StackPanel>

                <TextBlock Text="Explore    Your    Feelings"
                Foreground="white"
                FontSize="25"
                FontWeight="Medium"
                           Margin="10,0,0,10"
                FontFamily="Fonts/#Dosis"/>


                <DockPanel LastChildFill="True">
                    <Label FontSize="25" Margin="0,5" Content="Username : " Foreground="white" VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Left" FontFamily="Fonts/#Dosis"/>
                    <Border CornerRadius="5" BorderThickness="1" BorderBrush="white" Margin="0,5,0,5">
                        <TextBox Background="Transparent" BorderThickness="0" Height="35" Name="txtUserName" Width="203" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Fonts/#Dosis" Foreground="White" Margin="3,0,0,0" CaretBrush="White"/>
                    </Border>
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label FontSize="25"  Margin="2,5,0,5" Content="Password  : " Foreground="white" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" HorizontalAlignment="Left" FontFamily="Fonts/#Dosis"/>
                    <Border CornerRadius="5" BorderThickness="1" BorderBrush="white" Margin="0,5,0,5">
                        <PasswordBox Background="Transparent" BorderThickness="0" Height="35" x:Name="txtPassword" Width="206" VerticalContentAlignment="Center" HorizontalContentAlignment="Left" FontSize="20" FontFamily="Fonts/#Dosis" Foreground="White" Margin="3,0,0,0" CaretBrush="White"/>
                    </Border>
                </DockPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
             Margin="0,15,0,0"       >
                <Button Content="Login"
                Foreground="white"
                FontSize="14"
                FontWeight="Medium"
                Margin="0,0,10,0"  x:Name="btnLogin" Click="LoginClick" >

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                            <Setter Property="Background" Value="#FE6584"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4C70"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="25"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Register"
                Foreground="white"
                FontSize="14"
                FontWeight="Medium" x:Name="btnRegister" Click="RegisterClick" >

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"/>
                            <Setter Property="Background" Value="#39385D"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#3A3952"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="25"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
            <Label x:Name="errorTxt" FontSize="25" Margin="0,25,5,10" Content=""
            HorizontalContentAlignment="center"  VerticalContentAlignment="Center" Foreground="#ff0033" FontFamily="Fonts/#Dosis" />
        </StackPanel>

        <Grid Grid.Column="2"
          Grid.RowSpan="2"
          Margin="160, -365, -610, 85"
          Panel.ZIndex="-1" Grid.ColumnSpan="3">

            <Grid.RenderTransform>
                <RotateTransform Angle="50"/>
            </Grid.RenderTransform>

            <StackPanel Orientation="Horizontal"
                        Margin="-350, 250, -255, -250">

                <StackPanel>
                    <Border Width="700"
                            Height="35"
                            Background="#3DDDC2"
                            Margin="150,0,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#FC6586"
                            Margin="0,15,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#383660"
                            Margin="75,15,0,0"
                            CornerRadius="20"/>
                </StackPanel>

                <StackPanel>
                    <Border Width="700"
                            Height="35"
                            Background="#3DDDC2"
                            Margin="150,0,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#FC6586"
                            Margin="0,15,0,0"
                            CornerRadius="20"/>

                    <Border Width="700"
                            Height="35"
                            Background="#383660"
                            Margin="75,15,0,0"
                            CornerRadius="20"/>

                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Window>

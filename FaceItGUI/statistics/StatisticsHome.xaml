<Page x:Class="FaceItGUI.StatisticsHome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FaceItGUI"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="statisticsHome" Background="#007fff">

    <StackPanel>
        <Label x:Name="statisticsTitletxt" Content="What Do You Want to Know?" FontSize="50" HorizontalAlignment="Center" FontWeight="Bold" Margin="2,20,2,15" VerticalContentAlignment="Bottom"/>
        <Button HorizontalAlignment="Center" FontSize="28" Click="getUserMatch" Margin="2,20,2,1">In how many of the conversations did my emotions match?</Button>
        <Button HorizontalAlignment="Center" FontSize="28" Click="others" Margin="2,20,2,1">How many of the people I spoke to were positive?</Button>
        <Button HorizontalAlignment="Center" FontSize="28" Click="compareHappySad" Margin="2,20,2,1">My positive emotions vs negative ones</Button>
        <Button HorizontalAlignment="Center" FontSize="28" Click="getAllEmotions" Margin="2,15,2,1">My toal emotions</Button>
        <Button HorizontalAlignment="Center" FontSize="28" Click="Exit" Margin="2,15,2,1">Exit</Button>
    </StackPanel>
</Page>
